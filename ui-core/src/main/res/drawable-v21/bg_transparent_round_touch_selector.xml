<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/uiColorMask">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/dimen_line" android:color="@color/uiColorPrimaryBackground" />
                    <corners android:radius="@dimen/dimen_super_tiny" />
                    <solid android:color="@color/uiTouchRipple" />
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/dimen_line" android:color="@color/uiColorPrimaryBackground" />
                    <corners android:radius="@dimen/dimen_super_tiny" />
                    <solid android:color="@color/uiColorMask" />
                </shape>
            </item>
            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/dimen_line" android:color="@color/uiColorPrimaryBackground" />
                    <corners android:radius="@dimen/dimen_super_tiny" />
                    <solid android:color="@color/uiColorMask" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/dimen_line" android:color="@color/uiColorPrimaryBackground" />
                    <corners android:radius="@dimen/dimen_super_tiny" />
                    <solid android:color="@color/uiColorTransparent" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>